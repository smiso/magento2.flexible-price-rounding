<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <smilesolutions_fpr>
            <flexiblepricerounding>
                <enabled>1</enabled>
                <rounding_base_price>1</rounding_base_price>
                <rounding_discount>1</rounding_discount>
                <rounding_tax>1</rounding_tax>
                <rounding_type>swedish_round</rounding_type>
                <rounding_precision>1</rounding_precision>
                <subtract>0</subtract>
                <rounding_amount>0.01</rounding_amount>
                <show_decimal_zero>1</show_decimal_zero>
                <replace_zero_price>0</replace_zero_price>
                <zero_price_text>free</zero_price_text>
                <swedish_fraction>0.05</swedish_fraction>
            </flexiblepricerounding>
        </smilesolutions_fpr>
    </default>
</config>
